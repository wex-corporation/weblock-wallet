{
  "name": "@wefunding-dev/wallet-sdk",
  "version": "0.1.8",
  "description": "SDK package for Weblock Wallet",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:tsc && pnpm run build:rollup && pnpm run build:dts",
    "build:clean": "rm -rf dist",
    "build:tsc": "tsc",
    "build:rollup": "rollup -c",
    "build:dts": "rollup -c rollup.config.dts.mjs",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "format": "prettier --write 'src/**/*.{js,ts,json,md}'"
  },
  "dependencies": {
    "@wefunding-dev/wallet-core": "workspace:*",
    "@wefunding-dev/wallet-types": "workspace:*",
    "buffer": "^6.0.3",
    "process": "^0.11.10"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-inject": "^5.0.5",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^8.5.0",
    "rollup": "^4.27.4",
    "rollup-plugin-dts": "^5.3.1",
    "typescript": "^5.2.2"
  }
}
