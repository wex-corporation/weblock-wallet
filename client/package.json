{
  "name": "@wefunding-dev/wallet",
  "version": "0.1.5",
  "description": "WeBlock Wallet SDK for Web3 wallet integration",
  "private": false,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wefunding-dev/rwx-wallet.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "NODE_ENV=production tsup",
    "dev": "NODE_ENV=development tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "publish:npm": "node scripts/prepare-npm.js && npm publish --access public && git restore package.json"
  },
  "dependencies": {
    "@noble/ed25519": "^2.1.0",
    "axios": "^1.7.9",
    "bip39": "^3.1.0",
    "ethers": "^6.13.4",
    "firebase": "^11.1.0",
    "localforage": "^1.10.0",
    "shamir-secret-sharing": "^0.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "events-browserify": "^0.0.1",
    "fake-indexeddb": "^6.0.0",
    "http-server": "^14.1.1",
    "prettier": "^3.2.5",
    "stream-browserify": "^3.0.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
