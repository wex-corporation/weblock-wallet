{
  "name": "@weblock-wallet/sdk",
  "version": "0.1.0",
  "description": "SDK package for Weblock Wallet",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "umd": "./dist/umd/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && rollup -c && rollup -c rollup.config.dts.js",
    "build:watch": "rollup -c -w",
    "dev": "pnpm run build:watch",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,md}'"
  },
  "dependencies": {
    "@weblock-wallet/core": "file:../weblock-wallet-core-1.0.0.tgz",
    "@weblock-wallet/types": "file:../weblock-wallet-types-1.0.0.tgz",
    "ethers": "^6.8.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "rollup": "^2.78.0",
    "rollup-plugin-dts": "^5.1.1",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "typescript": "^4.9.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
