{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es6", "dom"],
    "declarationMap": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
