{
  "exclude": ["node_modules"],
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "checkJs": false,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true,
    "typeRoots": ["typings", "node_modules/@types"],
    "lib": ["es6", "dom"],
    "declarationMap": true
  },
  "include": ["./src", "./global.d.ts"],
}
