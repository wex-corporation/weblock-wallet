{
  "exclude": ["node_modules"],
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2020", "DOM"],
    "declarationMap": true
  },
  "include": ["./src"]
}
